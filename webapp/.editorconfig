root = true

[*]
charset = utf-8
indent_style = tab
indent_size = 4

[*.js]
insert_final_newline = true
trim_trailing_whitespace = true

[*.ts]
insert_final_newline = true
trim_trailing_whitespace = true

[*.tsx]
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = true  # trailing whitespaces can mess with Markdown formatting

[*.json]
indent_style = space
indent_size = 2

[tsconfig.json]
indent_style = space
indent_size = 2
